= @shelf.barcode
%br
= form_tag associate_shelf_item_path(@shelf) do |f|
  - if @shelf.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shelf.errors.count, "error")} prohibited this shelf from being saved:"
      %ul
        - @shelf.errors.full_messages.each do |msg|
          %li= msg
  .field
    = label_tag :barcode, "Item"
    = text_field_tag :barcode, @barcode, autofocus: "autofocus"
  .actions
    = submit_tag 'Save', class: 'btn btn-primary'
%br
= button_to "Done", shelves_path, method: :get, class: 'btn pull-right btn-primary'
%table.table.table-striped.condensed{"data-toggle" => "table"}
  %thead
    %tr
      %th= "#{@shelf.items.count} Item(s)"
      %th= 'Barcode'
      %th= 'Title'
      %th= 'Chron'
  %tbody
    - @shelf.items.each do |item|
      %tr
        %td
          = form_tag dissociate_shelf_item_path(@shelf) do |f|
            = hidden_field_tag :item_id, item.id
            .actions
              = submit_tag 'Remove', class: 'btn btn-primary'
              = submit_tag 'Unstock', class: 'btn btn-secondary'
        %td= item.barcode
        %td= item.title
        %td= item.chron

