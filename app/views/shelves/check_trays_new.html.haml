.scan
  = form_for(@shelf, url: check_trays_find_path) do |f|
    - if @shelf.errors.any?
      #error_explanation
        %h2= "#{pluralize(@shelf.errors.count, "error")} prohibited this operation:"
        %ul
          - @shelf.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :barcode, "Shelf"
      = f.text_field :barcode, autofocus: "autofocus"
    .actions
      = f.submit 'Submit', class: 'btn btn-primary'
