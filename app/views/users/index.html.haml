- if @users.blank?
  %span
    = "There are no current users."
- else
  = form_tag create_users_path, method: "post" do |f|
    %div{ :style => "display: inline-block; width: 100%;" }
      %div{ :style => "float: left;" }
        %input{ name: "user_name", id: "user_name", type: "text",
        required: true }/
      .actions
        = submit_tag 'New User', class: 'btn btn-primary'
  %div
  %table.table.table-striped.condensed.datatable{"id" => "users"}
    %thead
      %tr
        %th= 'User'
        %th= 'Sign in Count'
        %th= 'Last Sign In'
        %th= 'User type'
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.username
          %td= user.sign_in_count
          %td= user.last_sign_in_at

          - if current_user == user
            %td= 'admin'
            %td
          - else
            = form_tag update_users_path, method: "put" do |f|
              - if user.admin == true
                %td= select_tag :user_type, options_for_select(["admin", "worker", "disabled"], "admin")
              - elsif user.worker == true
                %td= select_tag :user_type, options_for_select(["admin", "worker", "disabled"], "worker")
              - else
                %td= select_tag :user_type, options_for_select(["admin", "worker", "disabled"], "disabled")
              %td
                = hidden_field_tag :user_id, user.id
                .actions
                  = submit_tag 'Update', class: 'btn btn-primary', id: "user-#{user.id}"
    :javascript
        $(document).ready(function() {
          window.table = $('#users').DataTable();
          $('div.dataTables_filter input').focus();
        } );
