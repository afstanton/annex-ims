= form_for @tray do |f|
  - if @tray.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tray.errors.count, "error")} prohibited this tray from being saved:"
      %ul
        - @tray.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :barcode
    = f.text_field :barcode
  .actions
    = f.submit 'Save'
