.scan
  = form_for(@tray, url: check_items_find_path) do |f|
    - if @tray.errors.any?
      #error_explanation
        %h2= "#{pluralize(@tray.errors.count, "error")} prohibited this operation:"
        %ul
          - @tray.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :barcode, "Tray"
      = f.text_field :barcode, autofocus: "autofocus"
    .actions
      = f.submit 'Submit', class: 'btn btn-primary'
