%h2 Scan Item/Tray
= form_tag item_multex_path(@item) do |f|
  .field
    = label_tag :barcode, "Item or Tray"
    = text_field_tag :barcode, autofocus: "autofocus"
  .actions
    = submit_tag 'Scan', class: 'btn btn-primary'
%br
%p
  Shelf Location:
  = (@item.tray.nil? ? 'STAGING' : (@item.tray.shelf.nil? ? 'STAGING' : @item.tray.shelf.barcode))
%p
  Tray Number:
  = (@item.tray.nil? ? 'STAGING' : @item.tray.barcode)
%p
  Title:
  = @item.title
%p
  Author:
  = @item.author
%p
  Chron:
  = @item.chron
%br
